{
  "manifest_version": 2,
  "name": "Holodos extension",
  "version": "1.0.0",
  "homepage_url": "https://github.com/baklai/holodos#readme",
  "description": "Holodos extension of products",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "*://*/*",
    "tabs",
    "activeTab",
    "webRequest",
    "notifications"
  ],

  "browser_action": {
    "default_icon": "icons/icon-32.png",
    "theme_icons": [
      {
        "light": "icons/icon-32.png",
        "dark": "icons/icon-32.png",
        "size": 32
      }
    ],
    "default_title": "Holodos extension",
    "default_popup": "popup/index.html"
  },

  "web_accessible_resources": ["resources/*.jpg"],

  "content_scripts": [
    {
      "matches": ["*://zakaz.atbmarket.com/*", "*://*.mozilla.org/*"],
      "js": ["/scripts/content.js"]
    }
  ],
  "applications": {
    "gecko": {
      "id": "holodos@mozilla.org",
      "strict_min_version": "45.0"
    }
  }
}
